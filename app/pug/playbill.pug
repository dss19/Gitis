include includes/head.pug

body

  include includes/header.pug

  main
    .page-header
      .page-header-grad
        .container
          .page-header-content
            ul.breadcrumbs
              li
                a(href="/", class="breadcrumbs-link") Главная 
              li
                a(href="/gitis", class="breadcrumbs-link breadcrumbs-link-disable") Афиша
            h1.page-title Афиша
            .page-header-icon
              img(src="images/images/rounds.svg", alt="круги")

    
    .page-body.sticky-wrapper
      .calendar.sticky-block
        .container
          .months
            .months-prev
              img(class="svg-inline", src="images/images/calendar-prev.svg", alt="назад")
            .months-current апрель <span>/</span> 2020
            .months-next
              img(class="svg-inline", src="images/images/calendar-next.svg", alt="вперед")
          .calendar-wrapper
      
      .filter
        .container
          .filter-wrap
            .filter-abc
              .filter-abc-date.filter-abc-item.active 01-31
              .filter-abc-abc.filter-abc-item а-я
            .filter-scene <span>выбрать сцену</span>
              ul.filter-scene-menu
                li.filter-scene-menu-link Основная сцена
                li.filter-scene-menu-link Новая сцена
                li.filter-scene-menu-link Учебный корпус ГИТИС, ауд. 26
                li.filter-scene-menu-link Учебный корпус ГИТИС, ауд. 39
                li.filter-scene-menu-link Учебный корпус ГИТИС, ауд. 46А
                li.filter-scene-menu-link Учебный корпус ГИТИС, ауд. 46Б
            .filter-img
              .filter-img-yes.filter-img-item.active
                img.svg-inline.filter-img-item-svg(src="images/images/filter-img.svg", alt="с фото")
              .filter-img-no.filter-img-item
                img.svg-inline.filter-img-item-svg(src="images/images/filter-list.svg", alt="без фото")
      .playbill-wrapper
      .container    
        .page-ellipse.active
          img(src="images/images/ellipse.svg", alt="эллипс")

  include includes/footer.pug